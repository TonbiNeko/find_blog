<h1>Blog一覧</h1>
<%= link_to "new blog", new_blog_path %>

<% @blogs.each do |blog| %>
  <p><%= blog.created_at.strftime("%Y-%m-%d %H:%M") %></p>
  <p><%= blog.title %></p>
  <p><%= blog.content %></p>
  <%= link_to "show", blog_path(blog.id) %>
  <%= link_to "edit", edit_blog_path(blog.id) %>
<% end %>